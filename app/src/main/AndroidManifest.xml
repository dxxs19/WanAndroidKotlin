<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wei.wanandroidkotlin">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="adjustUnspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.softinput.SoftInputModeActivity"
            android:windowSoftInputMode="stateUnchanged|adjustResize" />
        <activity
            android:name=".activity.UpdateActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".widgets.imagedrag.PostImagesActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".keepalive.onepixelactivity.OnePixelActivity"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="false"
            android:launchMode="singleInstance"
            android:theme="@style/OnePixelActivityTheme" />

        <service
            android:name=".keepalive.foregroundservice.ForegroundService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".keepalive.foregroundservice.AssistService"
            android:enabled="true"
            android:exported="true"/>
    </application>

</manifest>